@model IEnumerable<ManyToMany.Models.StudentCourse>

@{
    ViewData["Title"] = "Index";
}

<h1>Enrolment List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Student Name
            </th>
            <th>
               Course Title
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentCourseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentCourseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentCourseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
